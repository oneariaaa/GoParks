<% layout('layouts/boilerplate')%>
    <div id="cluster-map"></div>
    </br>
    <% for (let park of parks){%>
        <div class="card mb-3">
            <div class="row">
                <div class="col-md-4">
                    <%if(park.images.length) {%>
                        <img class="img-fluid" alt="" src="<%=park.images[0].url%>">
                        <% }else {%>
                            <img class="img-fluid" alt=""
                                src="https://res.cloudinary.com/oneariaaa/image/upload/v1619495331/GoParks/tw0jjknqeqs6mpzpr304.jpg">
                            <% } %>
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= park.title %>
                        </h5>
                        <p class="card-text">
                            <%= park.type %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= park.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/parks/<%=park._id%>">View <%=park.title%>
                        </a>
                    </div>
                </div>
            </div>
        </div>
        <% }%>
            <script>
                const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
                const parks = { features: JSON.parse('<%- JSON.stringify(parks) %>') };
            </script>
            <script src="/js/clusterMap.js"></script>