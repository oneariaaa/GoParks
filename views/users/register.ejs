<% layout('layouts/boilerplate')%>
    <link rel="stylesheet" href="/css/user.css">

    <body>
        <div class="container d-flex justify-content-center align-items-center mt-5">
            <div class="row">
                <div class="col-md-6 offset-md-3 col-xl-4 offset-xl-4">
                    <h5>CREATE AN ACCOUNT</h5>
                    <form action="/register" method="POST" class="validated-form" novalidate>
                        <div class="mb-3">
                            <label class="form-label" for="username">Username</label>
                            <input class="trans form-control" type="text" id="username" name="username" required
                                autofocus>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="email">Email</label>
                            <input class="trans form-control" type="email" id="email" name="email" required>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" style="color:white;" for="password">Password</label>
                            <input class="trans form-control" type="password" id="password" name="password" required>
                        </div>
                        <button class="btn btn-block bg-dark" style="color:white;">Register</button>
                    </form>
                </div>
            </div>
        </div>
    </body>